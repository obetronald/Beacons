<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#051829"
    tools:context=".Conexion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Welcome"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="choose your place of visit"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnSancat"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/m" />

            <Button
                android:id="@+id/btnCated"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/catedral" />

            <Button
                android:id="@+id/btnMor"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/moral" />

            <Button
                android:id="@+id/btnMerc"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/merced" />


            <Button
                android:id="@+id/btnTmb"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/tambos" />

            <Button
                android:id="@+id/btnComp"
                android:layout_width="270dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/compania" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>